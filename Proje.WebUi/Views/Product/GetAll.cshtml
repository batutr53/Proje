
@model List<ProductGetAllModel>
@{
    Layout = "_layout";
}

<div> 
   
    
    @if (Model?.Count>0)
    { 
        <a asp-action="Create" asp-controller="Product">Create</a>
        <a asp-action="Index" asp-controller="Home">Index</a>
    <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
    </tr>
  </thead> 
  
  <tbody>
  
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
           
        <th> 
            <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                Edit
            </a>
        </th>
        <th> 
            <a asp-action="Remove" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                Sil
            </a>
        </th>
                    </tr>

                }
                
    </tbody>
</table>
    }else
    {
            <div class="alert alert-danger" role="alert">
                Login Olmalısın.
           </div>

           <a asp-action="SignIn" asp-controller="Account">Login</a>
    } 
</div>